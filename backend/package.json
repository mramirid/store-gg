{
  "name": "@store-gg/backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "seed:dev": "env-cmd -f ./.env.development.local ts-node ./bin/seed.ts",
    "seed": "ts-node --transpile-only ./bin/seed.ts",
    "start": "ts-node --transpile-only ./bin/www.ts",
    "dev": "@powershell -Command $env:DEBUG='*'; env-cmd -f ./.env.development.local nodemon ./bin/www.ts",
    "prettier": "prettier --write \"**/*.{js,ts}\"",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "admin-lte": "^3.2.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-mongodb-session": "^3.1.1",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "debug": "^4.3.4",
    "ejs": "^3.1.8",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "helmet": "^6.0.0",
    "http-errors": "^2.0.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "method-override": "^3.0.0",
    "mongodb-uri": "^0.9.7",
    "mongoose": "^6.6.0",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "ts-node": "^10.8.1",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@tsconfig/node-lts-strictest": "^18.12.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "^0.0.37",
    "@types/connect-mongodb-session": "^2.4.4",
    "@types/cors": "^2.8.12",
    "@types/csurf": "^1.11.2",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/http-errors": "^1.8.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.184",
    "@types/method-override": "^0.0.32",
    "@types/mongodb-uri": "^0.9.1",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/passport": "^1.0.11",
    "@types/passport-jwt": "^3.0.7",
    "@types/passport-local": "^1.0.34",
    "@types/validator": "^13.7.7",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^2.0.18",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "node/no-unsupported-features/es-syntax": [
        "error",
        {
          "ignores": [
            "modules"
          ]
        }
      ]
    },
    "settings": {
      "node": {
        "tryExtensions": [
          ".js",
          ".json",
          ".node",
          ".ts"
        ]
      }
    }
  }
}
