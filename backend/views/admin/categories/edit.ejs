<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/common-head-content.ejs') %>
</head>

<%- include('../partials/dashboard/layout-start.ejs', {
  previousBreadcrumbs: [
    { label: "Dashboard", href: "/admin" },
    { label: "Categories", href: "/admin/categories" },
  ]
}) %>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <%- include('../partials/alert.ejs') %>
    <div class="row">
      <div class="col-12">
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Form</h3>
          </div>
          <!-- /.card-header -->
          <!-- form start -->
          <form action="/admin/categories/<%= formData.id %>?_method=PATCH" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" name="id" value="<%= formData.id %>">

            <div class="card-body">
              <div class="form-group">
                <label for="name">Category Name</label>

                <% const nameError = formErrors?.name; %>

                <input type="text" class="form-control <%= _.isError(nameError) ? "is-invalid" : "" %>" id="name"
                  name="name" placeholder="Enter name for the category" value="<%= formData.name %>">

                <% if (_.isError(nameError)) { %>
                <span class="invalid-feedback"><%= nameError.message %></span>
                <% } %>
              </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
              <button type="submit" class="btn btn-primary">Edit</button>
            </div>
          </form>
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
<!-- /.content -->

<%- include('../partials/dashboard/layout-end.ejs') %>

<%- include('../partials/common-scripts.ejs') %>

</html>